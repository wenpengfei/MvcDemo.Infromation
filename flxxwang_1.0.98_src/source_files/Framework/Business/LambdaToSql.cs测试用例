var minId = "379";
var collection = Lovewall.SelectAll(item => item.Id > Convert.ToInt32(minId));

////////////////
public class MyMethod
{
    public int Test(int a,int b)
    {
        return a+b;
    }
}
MyMethod m = new MyMethod();
var collection = Lovewall.SelectAll(item => item.Id > m.Test(100,50));


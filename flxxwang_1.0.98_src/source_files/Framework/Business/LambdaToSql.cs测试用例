bool? b=true;
item=>b;
翻译为:where 1
////////////////////////
var id=2;
item=>item.id>2
翻译为where id>2
//////////////////////
item=>item.id.In(new int[]{1,2});
翻译为where id in (1,2)
//////////////////////
item=>item.Content.Like("aa%bbc'd");
翻译为where Content like 'aa%bbc''d'
/////////////////////////
item=>item.Content.Contains("a'b");
翻译为where Content like '%a''b%'



                                <%
                                    foreach (var item in Job.Resume.FreeTimeList)
                                    {
                                        %>
                                        <td><%=item.AM ? "√" : "&nbsp;"%></td>
                                        <%
                                    }
                                %>
                            </tr>
                            <tr>
                                <td class='tg'>下午</td>
                                <%
                                    foreach (var item in Job.Resume.FreeTimeList)
                                    {
                                        %>
